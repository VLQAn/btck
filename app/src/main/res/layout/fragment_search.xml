<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4">


    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/featuredTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Featured"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#333333" />

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search"

            android:layout_marginEnd="16dp" />

        <!-- Filter Icon -->
        <ImageView
            android:id="@+id/filterIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Filter"
            />
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Search for products"

        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Card 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F7F7F7"
        android:elevation="2dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/banh_pho_mai"
            android:scaleType="centerCrop"
            android:contentDescription="Product Image" />


        <TextView
            android:id="@+id/sellerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Information"
            android:paddingTop="12dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Card 2 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:elevation="2dp"
    android:padding="12dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/banh_bouli"
        android:scaleType="centerCrop"
        android:contentDescription="Product Image" />


    <!-- Cart Icon -->
    <ImageView
        android:id="@+id/cartIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_cart"
        android:contentDescription="Cart"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp" />

    <!-- Bookmark Icon -->
    <ImageView
        android:id="@+id/bookmarkIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"

        android:contentDescription="Bookmark"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp" />
</RelativeLayout>

    <!-- Bottom Navigation -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"
android:background="#F4F4F4"
android:padding="12dp">

<TextView
    android:id="@+id/featuredTab"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Featured"
    android:background="#E0E0E0"
    android:textColor="#000000"
    android:padding="12dp"
    android:textSize="14sp"
    android:fontFamily="sans-serif-medium" />

<TextView
    android:id="@+id/feedTab"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Feed"
    android:textColor="#555555"
    android:padding="12dp"
    android:textSize="14sp"
    android:fontFamily="sans-serif" />

<TextView
    android:id="@+id/settingsTab"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Settings"
    android:textColor="#555555"
    android:padding="12dp"
    android:textSize="14sp"
    android:fontFamily="sans-serif" />
</LinearLayout>
</LinearLayout>